<div id='store_list'>
<h1>大安區美食地圖</h1>
<table>
  <% count = 0 %>
  <% @resturants.each do |resturant| %>
  <tr>
  	<td>(<%= (count+1).to_s %>) <%= resturant.name %></td><td><%= resturant.tel %></td>
  </tr>
  <tr>
  	<td colspan="2"><%= link_to '詳細資訊', resturant %> <%= link_to '編輯', edit_resturant_path(resturant) %> <%= link_to '刪除', resturant, :confirm => '確定嗎?', :method => :delete %> <%= resturant.address %></td>
  </tr>
    <% count = count + 1 %>
  <% end %>
  <tr><th colspan="2"><%= link_to '新增美食資訊', new_resturant_path %></th></tr>
</table>
</div>

<div id='map_canvas'></div>
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=true"></script>
<script type="text/javascript">
  var map;
  var stores = [][5];
  stores = [
<% count.times do |t| %>
    [ <%= @resturants[t].lat %>, <%= @resturants[t].lng %>, '<%= @resturants[t].name %>', '<%= @resturants[t].address %>', '<%= @resturants[t].tel %>' ]<%= "," if t < (count - 1) %>
<% end %>
  ];

  var markers = [];
  var infowindows = [];

  var image = new google.maps.MarkerImage('images/restaurant_blue_32.png', null, null, new google.maps.Point(12, 12), new google.maps.Size(24, 24));
  var image_man = new google.maps.MarkerImage('images/waiter_male_light_32.png', null, null, new google.maps.Point(16, 16));

  function initialize() {
    var myOptions = {
      zoom: 16,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    map = new google.maps.Map(document.getElementById('map_canvas'), myOptions);
    if(navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(
      	function(position) {
      	  var pos = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
      	  map.setCenter(pos);
      	  addPeopleMarker(pos);
      	  addCircles(pos.lat(), pos.lng());
      	}, function() {
      	  handleNoGeolocation(true);
      	}
      );
    } else {
      handleNoGeolocation(false);
    }
    drop();
  }
  
  function handleNoGeolocation(errorFlag) {
  	//use default location
  	map.setCenter(new google.maps.LatLng(25.025, 121.54));
  }

  function addMarkerAndInfoWindow(index) {
    addMarker(index);
    addMarkerInfoWindow(index);
  }

  function drop() {
  	for (var i = 0; i < stores.length; i++) {
  	  setTimeout('addMarkerAndInfoWindow('+i+')', i*500);
  	}
  }

  function addPeopleMarker(pos) {
  	var marker = new google.maps.Marker({
  		position: pos,
  		map: map,
  		icon: image_man,
  		draggable: false,
  		title: 'I\'m here!',
  		animation: google.maps.Animation.DROP
  	});
  }

  function addCircles(lat, lng) {
  	var pos = new google.maps.LatLng(lat, lng);
  	var circleOption;
  	for(i = 1; i <= 5; i++) {
  	  circleOption = {
  	    strokeColor: '#000088',
  	    strokeOpacity: 0.3,
  	    strokeWeight: 1,
  	    fillColor: '#000022',
  	    fillOpacity: 0.0,
  	    map: map,
  	    center: pos,
  	    radius: 100*i
  	  }
      new google.maps.Circle(circleOption);	
  	}
  }

  function addMarker(index) {
    var LatLng = new google.maps.LatLng(stores[index][0], stores[index][1]);
  	markers.push(new google.maps.Marker({
  		position: LatLng,
  		map: map,
  		icon: image,
  		draggable: false,
  		title: stores[index][2],
  		animation: google.maps.Animation.DROP
  	}));
  }

  function openMarkerInfoWindow(index) {
    infowindows[index].open(map, markers[index]);
  }

  function addMarkerInfoWindow(index) {
    var contentString = "<div id='bubble_content'>"+ stores[index][2] +"<br />" + stores[index][3] + "<br />TEL: " + stores[index][4] + "</div>";
    infowindows.push(new google.maps.InfoWindow({content: contentString}));
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>
